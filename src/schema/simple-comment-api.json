  "components": {
    "schemas": {
      "Success": {
        "required": [
          "code",
          "message"
        ],
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "code": {
            "maximum": 299,
            "minimum": 200,
            "type": "integer"
          }
        },
        "description": "Success message when no other information is expected"
      },
      "Error": {
        "required": [
          "code",
          "message"
        ],
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "code": {
            "maximum": 499,
            "minimum": 400,
            "type": "integer"
          }
        },
        "description": "Error message "
      },
      "Comment": {
        "required": [
          "dateCreated",
          "parentComment",
          "id",
          "text",
          "user"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "byte"
          },
          "user": {
            "type": "string",
            "format": "byte"
          },
          "text": {
            "type": "string"
          },
          "edits": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Comment"
            }
          },
          "parentComment": {
            "type": "string",
            "format": "byte"
          },
          "dateCreated": {
            "type": "string",
            "format": "date-time"
          },
          "dateModified": {
            "type": "string",
            "format": "date-time"
          },
          "authToken": {
            "type": "string",
            "format": "byte"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "byte"
          },
          "verified": {
            "type": "boolean"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "name": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          },
          "isAdmin": {
            "type": "boolean",
            "description": "true if the user is admin, false otherwise"
          }
        }
      },
      "AuthToken": {
        "type": "string"
      },
      "Topic": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "byte"
          },
          "isLocked": {
            "type": "boolean"
          }
        }
      },
      "Discussion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "byte"
          },
          "isLocked": {
            "type": "boolean"
          },
          "comments": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Comment"
            }
          }
        }
      }
    },
    "parameters": {
      "userId": {
        "name": "userId",
        "in": "path",
        "required": true,
        "style": "simple",
        "explode": false,
        "schema": {
          "type": "string",
          "format": "byte"
        }
      },
      "topicId": {
        "name": "topicId",
        "in": "path",
        "required": true,
