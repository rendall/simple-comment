{
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/aws-lambda": "^8.10.64",
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.1.23",
    "@types/node": "^11.15.35",
    "@types/uuid": "^8.3.0",
    "aws-sdk": "^2.790.0",
    "babel-jest": "^26.6.3",
    "eslint": "^5.16.0",
    "http-server": "^0.12.3",
    "jest": "^26.6.3",
    "jest-environment-node": "^24.7.1",
    "merge": "^1.2.1",
    "mongodb-memory-server": "^6.9.2",
    "netlify-lambda": "^2.0.1",
    "prettier": "2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.9",
    "ts-node": "^9.0.0",
    "typescript": "^3.4.3",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  },
  "scripts": {
    "build": "yarn run build:backend && yarn run build:frontend",
    "build:backend": "yarn run build:netlify",
    "build:frontend": "tsc --listEmittedFiles",
    "build:netlify": "tsc -p tsconfig.netlify.functions.json --listEmittedFiles && netlify-lambda build ./netlify-functions",
    "postbuild": "rimraf ./netlify-functions && rimraf ./lib",
    "posttest": "rimraf ./globalConfig.json",
    "prebuild": "rimraf ./functions",
    "start": "start:backend",
    "start:backend": "yarn run build:backend && netlify-lambda serve ./netlify-functions",
    "start:frontend": "yarn run build:frontend && http-server ./dist --proxy http://localhost:9000",
    "test": "jest",
    "test:watch": "jest --watch --noStackTrace",
    "watch:backend": "tsc -p tsconfig.netlify.functions.json --listEmittedFiles --watch",
    "watch:frontend": "tsc --listEmittedFiles --watch"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.2.3",
    "uuid": "8.3.1"
  }
}
